{% extends 'base.html.twig' %}
{% block body %}
    <div class="content-page">
    <div class="container-fluid">
    <div class="col-lg-12">
    <div class="iq-edit-list-data">
    <div class="tab-content">
    <div class="tab-pane fade active show" id="personal-information" role="tabpanel">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="iq-header-title">
                    <h4 class="card-title">Add a vacation request </h4>
                </div>
            </div>
            <div class="card-body">
                <form action="{{ path('addvacation',{id:infos.id})}}" method="post">
                    <div class=" row align-items-center">

                        <div class="col-md-6 mb-3">
                            <label for="startDate">Beginning on </label>
                            <input type="date" class="form-control" name="startDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="endDate"> Ending on</label>
                            <input type="date" class="form-control" name="endDate"  aria-describedby="inputGroupPrepend2" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="reason">Reason of Request</label>
                            <select class="form-control" name="reason" required>
                                <option selected disabled value="">Reason of Request</option>
                                <option value="Vacation">Vacation</option>
                                <option value="Personal Leave">Personal Leave</option>
                                <option value="Funeral/Bereavement">Funeral/Bereavement</option>
                                <option value="Jury Duty">Jury Duty</option>
                                <option value="Family Reasons">Family Reasons</option>
                                <option value="Medical Leave">Medical Leave</option>
                                <option value="To Vote">To Vote</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validation">validation</label>
                            <select class="form-control" name="validation" required>
                                <option selected disabled value="">Validation</option>
                                <option value="Approved">Approved</option>
                                <option value="Not Approved Yet">Not Approved Yet</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                                <label class="form-check-label" for="invalidCheck2">
                                    Agree to terms and conditions
                                </label>
                            </div>
                            <br>
                            <div>
                                <button type="submit" class="btn btn-primary">Add New User</button>
                            </div>
                        </div>


                    </div>
                </form>


            </div>
        </div>
    </div>

{% endblock %}