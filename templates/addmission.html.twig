{% extends 'base.html.twig' %}
{% block body %}
    <div class="content-page">
        <div class="container-fluid">
    <div class="col-lg-12">
        <div class="iq-edit-list-data">
            <div class="tab-content">
                <div class="tab-pane fade active show" id="personal-information" role="tabpanel">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Add A Misson</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <form action="{{ path('addmission',{id:infos.id,m:user.id})}}" method="post">
                            <div class=" row align-items-center">
                                <div class="col-md-6 mb-3">
                                    <label for="clientName">Client's Name</label>
                                    <input type="text" class="form-control" name="clientName" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="startDate">Start Date</label>
                                    <input type="date" class="form-control" name="startDate" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="endDate"> End Date</label>

                                    <input type="date" class="form-control" name="endDate"  aria-describedby="inputGroupPrepend2" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="validation">validation</label>
                                    <select class="form-control" name="validation" required>
                                        <option selected disabled value="">Validation</option>
                                        <option value="Done">Done</option>
                                        <option value="Not Yet">Not Yet</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                                        <label class="form-check-label" for="invalidCheck2">
                                            Agree to terms and conditions
                                        </label>
                                    </div>
                                    <br>
                                    <div>
                                        <button type="submit" class="btn btn-primary">Add New mission</button>
                                    </div>
                                </div>


                            </div>
                            </form>


                        </div>
                    </div>
                </div>

{% endblock %}