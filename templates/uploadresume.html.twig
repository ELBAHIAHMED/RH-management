{% extends 'base.html.twig' %}
{% block body %}

    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Add Your resume</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <form action= "{{ path('save_resume',{id:infos.id})}}" method="post" enctype="multipart/form-data">
                                <p>your Resume</p>
                                <input type="file"  name="resume" id="resume" >
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
{% endblock %}