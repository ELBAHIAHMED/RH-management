                                                                    <div class="col-sm-6">
                                                                        <p class="mb-0">{{ infos.department }}</p>
                                                                    </div>
                                                                </div>
                                                                <div class="row align-items-center mb-2">
                                                                    <div class="col-sm-6">
                                                                        <h6>Facebook</h6>
                                                                    </div>
